<% if listing.errors.any? %>
    <div class="errors">
        <% listing.errors.full_messages.each do |error| %>
            <li><%= error %></li>
        <% end %>
    </div>
<% end %>

<%= form_with model: listing, local: true do |form| %>
    <div>
        <%= form.label :title %>
        <%= form.text_field :title, value: listing.title %>
    </div>
    <div>
        <%= form.label :message %>
        <%= form.text_field :message, value: listing.message %>
    </div>
    <div>
        <%= form.submit %>
    </div>
<% end %>