<% if listing.errors.any? %>
    <div class="errors">
        <% listing.errors.full_messages.each do |error| %>
            <li><%= error %></li>
        <% end %>
    </div>
<% end %>

<%= form_with model: listing, local: true do |form| %>
    <div>
        <%= form.label :title %>
        <%= form.text_field :title, value: listing.title %>
    </div>
    <div>
        <%= form.label :message %>
        <br>
        <%= form.text_area :message, value: listing.message, cols: 33, rows: 10 %>
    </div>
    <div>
        <%= form.label :image %>
        <%= form.file_field :image, accept: 'image/png,image/gif,image/jpeg,image/jpg' %>
    </div>
    <div>
        <%= form.submit %>
    </div>
<% end %>